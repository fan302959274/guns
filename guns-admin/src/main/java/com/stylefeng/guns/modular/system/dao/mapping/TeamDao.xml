<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.modular.system.dao.TeamDao">

    <sql id="Base_Column_List">
        id, name,level, membernum, winnum, debtnum, drawnum,point,prov,city,area,descteam,ownerid,status,createdate,updatedate,creator,updator
    </sql>

    <select id="selectTeams" resultType="map">
        select
        <include refid="Base_Column_List" />
        from pk_team
        <if test="name != null">
            where name like CONCAT('%',#{name},'%')
        </if>
    </select>
</mapper>